{{> header}}
<div class="home-bg">
    <img src="/images/post.jfif" alt="">
    <div class="home-text">
        <h1>Post Image</h1>
    </div>
</div>
<div class="body">
    <form class="" id="postForm">
        <label for="">Post Title : </label>
        <input type="text" name="title" id="title" placeholder="Post Title"><br>
        <label for="">Post Description : </label>
        <input type="textarea" name="description" id="description" placeholder="Post Description"><br>
        <label for="">Input image : </label>
        <input type="file" name="postImage" id="postImage" accept="image/*" single >

        <button type="submit" name="button" id="postBtn">Post</button>
    </form>
</div>
{{> footer}}